<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:desktop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Closed="Window_Closed"
    Title="Translate App">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid RowSpacing="12" Grid.Column="0" Margin="12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
        
            <RichEditBox x:Name="inputbox" />
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Spacing="8"
                        HorizontalAlignment="Right"
                        Margin="0,10">
                <ProgressRing x:Name="apiProgress" IsActive="False" />
                <Button Content="Load Model"
                        x:Name="loadButton"
                        Click="LoadModelButton_Click" />
                <Button Content="Translate to JP"
                        x:Name="translateToJPButton"
                        IsEnabled="False"
                        Click="TranslateToJPButton_Click"
                        Style="{StaticResource AccentButtonStyle}" />
                <Button Content="Translate to EN"
                        x:Name="translateToENButton"
                        IsEnabled="False"
                        Click="TranslateToENButton_Click"
                        Style="{StaticResource AccentButtonStyle}" />
                <Button Content="Destroy Model"
                        x:Name="destroyButton"
                        IsEnabled="False"
                        Click="DestroyModelButton_Click" />
            </StackPanel>

        </Grid>
        <TextBlock x:Name="ResultBlock" 
                   TextWrapping="Wrap"
                   Grid.Column="1" 
                   Margin="12,0">
            
        </TextBlock>
    </Grid>
</Window>
